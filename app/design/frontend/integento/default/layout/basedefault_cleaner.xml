<?xml version="1.0"?>
<layout version="0.2.0">
    <default>
        <reference name="head">

            <!-- Remove default CSS -->
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/styles.css</name>
            </action>
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/styles-ie.css</name>
            </action>
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/widgets.css</name>
            </action>
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/print.css</name>
            </action>

            <!-- Remove default JS -->
            <action method="removeItem">
                <type>js</type>
                <name>lib/ds-sleight.js</name>
            </action>
            <action method="removeItem">
                <type>skin_js</type>
                <name>js/ie6.js</name>
            </action>

            <!-- Needed in advices -->
            <!-- <action method="removeItem"><type>js</type><name>scriptaculous/builder.js</name></action> -->

            <!-- Needed in ajax autocompleter -->
            <!-- <action method="removeItem"><type>js</type><name>scriptaculous/controls.js</name></action> -->
            <!-- <action method="removeItem"><type>js</type><name>scriptaculous/effects.js</name></action> -->

            <!-- Needed in native product zoom -->
            <action method="removeItem"><type>js</type><name>scriptaculous/dragdrop.js</name></action>
            <action method="removeItem"><type>js</type><name>scriptaculous/slider.js</name></action>

        </reference>

        <!-- Remove default blocks -->
        <remove name="account.links"/>
        <remove name="accountLinks"/>
        <remove name="cart_sidebar"/>
        <remove name="catalog.compare.sidebar"/>
        <remove name="customer_account_dashboard_hello"/>
        <remove name="left.newsletter"/>
        <remove name="left.permanent.callout"/>
        <remove name="left.reports.product.viewed"/>
        <remove name="paypal.partner.right.logo"/>
        <remove name="right.newsletter"/>
        <remove name="right.permanent.callout"/>
        <remove name="right.poll"/>
        <remove name="right.reports.product.viewed"/>
        <remove name="sale.reorder.sidebar"/>
        <remove name="tags_popular"/>
        <remove name="wishlist_sidebar"/>

        <!-- Header -->
        <reference name="header">
            <remove name="top.links"/>
            <remove name="welcome"/>
        </reference>

        <!-- Cart -->
        <remove name="checkout.cart.top_methods" />

    </default>
</layout>
